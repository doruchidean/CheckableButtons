<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CheckableButton">
        <attr name="text" format="string"/>
        <attr name="isChecked" format="boolean"/>
        <attr name="buttonHeight" format="dimension"/>
        <attr name="cornerIcon" format="reference"/>
        <attr name="background" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CheckableImageButton">
        <attr name="src" format="reference"/>
        <attr name="isChecked"/>
        <attr name="buttonHeight"/>
        <attr name="cornerIcon"/>
        <attr name="background"/>
        <attr name="imageScaleType">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>
    </declare-styleable>

</resources>